{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    /* Module Resolution */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Output */
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Type Definitions */
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}